package org.example;

import javax.swing.*;

public class Ejercicio1Java {
    public static void main(String[] args) {

        //Declaración

    double segundos;
    double minutos;
    double horas;
    double dias;
    String segundosString;

        // Asignación

    segundos = 0;
    minutos = 0;
    horas = 0;
    dias = 0;


        // Ingreso de datos

    segundosString = JOptionPane.showInputDialog("Ingrese los segundos");
    segundos = Double.parseDouble(segundosString);

        // Procesos de datos
        
        minutos = segundos/60;
        horas = minutos/60;
        dias = horas/24;

        // Salida de datos

        System.out.println("Son " + minutos + " minutos, " + horas + " horas, " + dias + " días");
        JOptionPane.showMessageDialog(null, "Son " + minutos + " minutos, " + horas + " horas, " + dias + " días");
    }

}
